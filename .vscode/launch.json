{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH", 
                    "value": "C:/msys64/ucrt64/bin;C:/vcpkg/installed/x64-mingw-dynamic/bin;${env:PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Skip std library stepping",
                    "text": "skip -gfi /usr/include/c++/**/*",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build Debug",
            "sourceFileMap": {
                "/c/": "C:/",
                "/usr/": "C:/msys64/usr/"
            },
            "logging": {
                "engineLogging": false,
                "trace": false,
                "traceResponse": false
            }
        },
        {
            "name": "(gdb) Release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "C:/msys64/ucrt64/bin;C:/vcpkg/installed/x64-mingw-dynamic/bin;${env:PATH}"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb", 
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "setupCommands": [],
            "preLaunchTask": "CMake Build Release",
            "noDebug": true
        },
        {
            "name": "Run without Debugging",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "C:/msys64/ucrt64/bin;C:/vcpkg/installed/x64-mingw-dynamic/bin;${env:PATH}"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "preLaunchTask": "CMake Build Release",
            "noDebug": true
        }
    ],
    "compounds": [
        {
            "name": "Build and Debug",
            "configurations": ["(gdb) Debug"]
        }
    ]
}