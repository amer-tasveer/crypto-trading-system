{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_TOOLCHAIN_FILE=C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "-DVCPKG_TARGET_TRIPLET=x64-mingw-dynamic",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-G",
                "Ninja"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Configure the project with CMake (Debug)"
        },
        {
            "label": "CMake Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_TOOLCHAIN_FILE=C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "-DVCPKG_TARGET_TRIPLET=x64-mingw-dynamic",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-G",
                "Ninja"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Configure the project with CMake (Release)"
        },
        {
            "label": "CMake Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "--parallel",
                "8"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "CMake Configure Debug"
            ],
            "detail": "Build the project using CMake (Debug)"
        },
        {
            "label": "CMake Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Release",
                "--parallel",
                "8"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "CMake Configure Release"
            ],
            "detail": "Build the project using CMake (Release)"
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "clean"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Clean build artifacts"
        },
        {
            "label": "Run Program",
            "type": "shell",
            "command": "${workspaceFolder}/build/main.exe",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build",
                "env": {
                    "PATH": "C:/msys64/ucrt64/bin;C:/vcpkg/installed/x64-mingw-dynamic/bin;${env:PATH}"
                }
            },
            "group": "test",
            "dependsOn": [
                "CMake Build Release"
            ],
            "detail": "Run the compiled executable"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/src"
            ],
            "options": {
                "cwd": "C:/msys64/ucrt64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}